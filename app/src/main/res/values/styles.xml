<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/black</item>

        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="RegisterTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_app</item>
        <item name="android:layout_marginRight">@dimen/margin_app</item>
    </style>

    <style name="RegisterTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingTop">3.5dp</item>
    </style>

    <style name="TitleCard">
        <item name="android:layout_marginLeft">@dimen/margin_detail_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_detail_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionCard">
        <item name="android:layout_marginLeft">@dimen/margin_detail_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_detail_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
